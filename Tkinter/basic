#create login page

from tkinter import*
root=Tk()
root.title("LOGIN_PAGE")

l1=Label(root,text='Name')
l2=Label(root,text='Password')

e1=Entry(root)
e2=Entry(root)

l1.grid(row=0)
l2.grid(row=1)

e1.grid(row=0,column=1)
e2.grid(row=1,column=1)

c=Checkbutton(root,text="Keep me login in")
c.grid(columnspan=2)

root.mainloop()



